# Auto detect text files and normalize line endings to LF
* text=auto

# Python
*.py text eol=lf
*.pyw text eol=lf
*.pyc binary
*.pyo binary

# Jupyter Notebooks
*.ipynb text eol=lf diff=jupyter

# Data files
*.csv text eol=lf
*.json text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Config files
.gitignore text eol=lf
.gitattributes text eol=lf
